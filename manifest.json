{
  "manifest_version": 3,
  "name": "LinkedIn Job Turbo",
  "version": "1.0",
  "description": "Streamline and accelerate your job search on LinkedIn",
  "permissions": [
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/img.png",
    "48": "icons/img.png",
    "128": "icons/img.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Job Turbo",
    "default_icon": {
      "16": "icons/img.png",
      "48": "icons/img.png",
      "128": "icons/img.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pdf.worker.js",
        "styles/inspection_mode.css",
        "styles/modal.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js",
        "config.js"
      ],
      "run_at": "document_end"
    }
  ]
}
