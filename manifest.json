{
  "manifest_version": 3,
  "name": "LinkedIn Job Page Button Clicker",
  "version": "1.0",
  "description": "Streamline LinkedIn job applications with Control+X Hotkey.",
  "permissions": ["activeTab", "scripting", "downloads"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["data/personalInfo.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
}
